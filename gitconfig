[user]
    name = kelvin
    email = kowochen@gmail.com
[color]
    ui = true
[alias]
    lg = log --graph --pretty='format:%C(auto)%h %C(cyan)%ar %C(auto)%d %C(magenta)%an %C(auto)%s'
    lga = log --graph --all --pretty='format:%C(auto)%h %C(cyan)%ar %C(auto)%d %C(magenta)%an %C(auto)%s'
    st = status
    co = checkout
    ci = commit
    nc = commit --allow-empty-message -m ''
    br = branch
    sm = submodule
    smu = submodule update --init --recursive
    df = diff
    dc = diff --cached
    dt = diff --no-index
    rs = restore
    rss = restore --staged --worktree
    sw = switch
[core]
    pager = git-split-diffs --color | less -RFX
    editor = nvim
	autocrlf = false
	safecrlf = false
    whitespace = tab-in-indent,tabwidth=4
[push]
    default = simple
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[pull]
    rebase = true
[split-diffs]
    theme-name = github-light
[branch]
	autosetuprebase = always
[init]
	defaultBranch = main
