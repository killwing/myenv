    \ 'dir':  '\v[\/]\.(git|hg|svn)$',
    \ 'file': '\v\.(exe|dll|a|o|so|lo|la|pyc|d)$',
    \ 'link': 'SOME_BAD_SYMBOLIC_LINKS' }
"   \ 'file': '\v(\.cpp|\.h|\.hh|\.cxx)@<!$'

" quickhl
